<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface.Registration"
    android:background="#292929">

    <EditText
        android:id="@+id/tvFirstName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#1c1c1c"
        android:textColorHint="#7d7d7d"
        android:textColor="#9a9a9a"
        android:hint="Напишите имя"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/tvLastName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvLastName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#1c1c1c"
        android:textColorHint="#7d7d7d"
        android:textColor="#9a9a9a"
        android:textSize="18sp"
        android:hint="Напишите фамилию"
        android:paddingLeft="10dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/oneLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFirstName" />

    <EditText
        android:id="@+id/oneLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#1c1c1c"
        android:textColorHint="#7d7d7d"
        android:textColor="#9a9a9a"
        android:hint="Придумайте логин"
        android:paddingLeft="10dp"
        android:textColorHighlight="#FFFFFF"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/onePassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLastName" />

    <EditText
        android:id="@+id/onePassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#1c1c1c"
        android:textColorHint="#7d7d7d"
        android:textColor="#9a9a9a"
        android:hint="Придумайте пароль"
        android:paddingLeft="10dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/twoPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLogin" />

    <EditText
        android:id="@+id/twoPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#1c1c1c"
        android:textColorHint="#7d7d7d"
        android:textColor="#9a9a9a"
        android:hint="Повторите пароль"
        android:paddingLeft="10dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/buttonRegistration"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onePassword" />

    <Button
        android:id="@+id/buttonRegistration"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="#00bb6d"
        android:onClick="Registration"
        android:text="Зарегестрироваться"

        app:layout_constraintTop_toBottomOf="@id/twoPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>