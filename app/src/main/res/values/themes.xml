<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Authorization" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1c1c1c</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <item name="android:itemBackground">#FFFFFF</item>
        <item name="android:textColorSecondary">#938F8F</item>
        <item name="android:textColorPrimary">#9a9a9a</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">#FFFFFF</item>
        <item name="android:textColorSecondary">#938F8F</item>
        <item name="android:textColorPrimary">#9a9a9a</item>
    </style>


</resources>